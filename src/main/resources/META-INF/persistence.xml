<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
	<persistence-unit name="likeherotozero">
	
	<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
	<class>lhtz.Benutzer</class>
	<class>lhtz.Emissions</class>
	<class>lhtz.Gruppe</class>
	<class>lhtz.Laender</class>
	<properties>
	
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://127.0.0.1:3306/likeherotozero"/>
            <property name="jakarta.persistence.jdbc.user" value="lhtz"/>
            <property name="jakarta.persistence.jdbc.password" value="lhtz1234"/>
            <property name="jakarta.persistence.schema-generation.database.action" value="none" />
            <property name="hibernate.dialect"    value="org.hibernate.dialect.MySQLDialect" />
            <property name="hibernate.show_sql"   value="true" />
            <property name="hibernate.format_sql" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.use_sql_comments" value="true"/>
	
	</properties>
	
	
	</persistence-unit>
</persistence>
